<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:background="@color/cardview_dark_background"
    >
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_alarm_image"
        android:id="@+id/thumbnail_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/thumbnail_image"
        android:layout_toLeftOf="@+id/active_image"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycle_title"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:text="Title"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycle_date_time"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="Date and Time"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyle_repeat_info"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="Repeat No and Type"/>

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/active_image"
        android:src="@drawable/ic_notification_active"
        android:layout_centerVertical="true"/>

</RelativeLayout>